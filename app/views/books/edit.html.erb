<h1>Editing Book</h1>
<%= form_with model:@book, local:true do |f| %>
<%= render 'layouts/error_messages', model: f.object %>
<div class="field">
  <%= f.label :Title %>
  <%= f.text_field :title %>
</div>
<div class="field">
  <%= f.label :Body %>
  <%= f.text_field :body %>
</div>
<div>
  <%= f.submit 'Update Book' %>
</div>
<% end %>

<%= link_to "show", book_path(@book) %>
|
<%= link_to "Back", books_path %>
