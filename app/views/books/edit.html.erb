<h1>Editing Book</h1>
<%= form_with model:@book, local:true do |f| %>
<% if @book.errors.any? %>
<h3><%= @book.errors.count %>error</h3>
<% @book.errors.full_messages.each do |message| %>
<%= message %>
<% end %>
<% end %>
<div class="field">
  <%= f.label :Title %>
  <%= f.text_field :title %>
</div>
<div class="field">
  <%= f.label :Body %>
  <%= f.text_field :body %>
</div>
<div>
  <%= f.submit 'Update Book' %>
</div>
<% end %>

<%= link_to "Edit", edit_book_path(@book.id) %>
|
<%= link_to "Back", books_path %>
